{
  "name" : "spec17-intrate-test-500",
  "base" : "br-base.json",
  "workdir" : "..",
  "host-init" : "build-intrate.sh test",
  "overlay" : "speckle/build/overlay/intrate/test",
  "rootfs-size" : "3GiB",
  "outputs" : ["/output", "/cpi/"],
  "post_run_hook" : "handle-results.py -d test -s intrate",
